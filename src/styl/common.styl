clearfix()
  &:before
  &:after
    content: ""
    display: table
  &:after
    clear: both
  zoom: 1 if support-for-ie
// Single side border-radius
border-top-radius($radius)
  border-top-right-radius $radius
  border-top-left-radius $radius

border-right-radius($radius)
  border-bottom-right-radius $radius
  border-top-right-radius $radius

border-bottom-radius($radius)
  border-bottom-right-radius $radius
  border-bottom-left-radius $radius

border-left-radius($radius)
  border-bottom-left-radius $radius
  border-top-left-radius $radius
body
  font-family: $font-family-sans-serif
  font-size: $font-size-base
  line-height: 1.428571429
  color: $base-gray
*
  box-sizing: border-box
.pure-g
  font-family: $font-family-sans-serif
  [class *="pure-u"]
    font-family: $font-family-sans-serif
.contain
  width: $container-width
  min-width: $container-width
  margin: 0 auto
.header
  $header-height = 60px
  $header-bg-color = #1e3346
  $header-title-color = $white-color-darker
  $header-active-bg = #112231
  $header-color = #6d7680
  height: $header-height
  background: $header-bg-color
  overflow: hidden
  clearfix()
  min-width: $container-width
  &-logo
  &-nav
  &-reg
    float: left
  &-logo
    margin-right: 166px
    img
      margin-top: 10px
      display: inline-block
      vertical-align: middle
    .logo-jd
      max-width: 117px
      padding-right: 12px
      margin-right: 12px
      border-right: 1px solid #4c5c6c
    .logo
      max-width: 129px
  &-nav
    margin: 0
    padding: 0
    float: right
    li
      float: left
      height: $header-height
      list-style: none
    .title
      width: 140px
      display: block
      text-decoration: none
      text-align: right
      line-height: 60px
      color: $white-color
      font-size: $font-size-h4
      &:hover
        color: $base-color
    .subtitle
      font-size: $font-size-tiny
      margin-top: 6px
    .active
      color: $base-color
  &-top
    background: #132436
    clearfix()
    min-width: $container-width
    .header-phone
    .wx
      float: left
      color: $header-color
      line-height: 28px
      i
        margin-right: 6px
    .wx
      margin-left: 40px
    .header-reg
      float: right
      .user-account
      .user-logout
        color: $white-color
        line-height: 28px
        text-decoration: none
        margin-left: 20px
    .regbtn
      text-decoration: none
      background: $base-color
      color: $white-color
      line-height: 28px
      display: inline-block
      padding: 0 20px
      margin-right: 20px
    .regbtn-login
      color: #6d7680
      text-decoration: none
.footer
  $footer-bg-color = #010c11
  $footer-line-color = #363e44
  $footer-font-color = #818589
  $footer-link-border-color = #41494f
  background: $footer-bg-color
  height: 100px
  padding: 20px 0
  min-width: $container-width
  &-logo
    float: left
    margin: 6px 56px 0 0
  &-info
    padding: 0 260px 0 0
    float: left
    border-right: 1px dashed $footer-line-color
    text-align: left
    color: $footer-font-color
    &-link
      a
        color: $footer-font-color
        text-decoration: none
        display: inline-block
        padding: 0 20px
        font-size: $font-size-middle
      .about-link
        padding-left: 0
      .wise
        border-left: 1px solid $footer-link-border-color
        border-right: 1px solid $footer-link-border-color
    &-copyright
      margin-top: 20px
  &-work
    text-align: center
    float: right
    &-phone
      color: $footer-font-color
      font-size: $font-size-h2
      i
        margin-right: 8px
    &-detail
      color: $footer-font-color

