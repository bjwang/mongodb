.account
  $account-border-color = #e8e8e8
  background: $grey-base-bg
  padding: 40px 0
  min-width: $container-width
  &-user
    background: $white-color
    margin-bottom: 20px
    padding: 20px 40px
    &-header
      padding: 10px 0
      border-bottom: 1px solid $account-border-color
    h2
      margin: 0
      color: $grey-color-dark
      font-size: $font-size-h2
      font-weight: normal
      border-left: 4px solid $base-color
      padding-left: 20px
    &-body
      background: $grey-base-bg
      padding: 24px 40px
      overflow: hidden
    &-avatar
      float: left
      border-right: 1px solid $account-border-color
      padding-right: 20px
      margin-right: 20px
    &-phone
      margin-left: 90px
      font-size: $font-size-h3
      p
        margin: 0 0 8px
        font-size: $font-size-base
        color: $grey-color
  &-order
    background: $white-color
    &-header
      padding: 10px 0
      border-bottom: 1px solid $account-border-color
      h3
        margin: 0
        font-weight: normal
        border-left: 4px solid $base-color
        padding-left: 30px
        line-height: 28px
    &-body
      padding: 20px 40px
      min-height: 500px
      .order-item
        background: $grey-base-bg
        margin-bottom: 10px
        &-header
          border-bottom: 1px solid $account-border-color
          font-size: $font-size-middle
          padding: 0 24px 0 20px
          overflow: hidden
          clearfix()
          line-height: 48px
        &-name
          font-size: $font-size-h4
          color: $gray-darker
          float: left
          span
            font-size: $font-size-h6
            color: $base-red-color
            border: 1px solid $base-red-color
            margin-left: 14px
            padding: 2px 10px
            line-height: 14px
            border-radius(2px)
            display: inline-block
            vertical-align: middle
            margin-top: -2px
        &-time
          float: right
          font-size: $font-size-h5
          color: $grey-color-better
          margin-top: 2px
          span
            margin-left: 10px
        &-detail
          padding: 18px 24px 18px 20px
          overflow: hidden
          clearfix()
          dd
            margin: 0
          dt
            font-size: $font-size-h3
          dl
            float: left
          .item
            &-detail
              width: 820px
              float: left
              label
                color: $grey-color-better
              span
                color: $grey-color
              dt
              dd
                font-size: $font-size-middle
                color: $grey-color
              dd
                margin: 10px 0 0
                padding: 0
            &-rate
              width: 170px
              margin: 0
              dt
                font-size: $font-size-h2
                color: $base-red-color
              dd
                color: $grey-color-lighter
                font-size: $font-size-h6
                margin: 0
            &-direct
              width: 170px
              margin: 0
              dt
                font-size: $font-size-h3
                color: $base-red-color
              dd
                color: $grey-color-lighter
                font-size: $font-size-h6
                margin: 0
            &-base-fee
              padding: 0 40px 0 58px
              margin: 0 70px
            &-amount
              margin: 0
        &-view
          width: 122px
          float: right
          line-height: 34px
          padding: 0
          font-size: $font-size-h5
          text-align: center
          margin: 12px 0 0 0
          border-radius(4px)
